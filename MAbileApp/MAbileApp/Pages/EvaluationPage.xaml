<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAbileApp.Pages.EvaluationPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="ListViewEvaluation"  HasUnevenRows="True">                
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Margin="5" FontSize="18" HorizontalOptions="Center" Text="{Binding SublectName}"></Label>
                                <Label Margin="5" FontSize="18" HorizontalOptions="Center" Text="{Binding Time}"></Label>
                                <Label Margin="5" FontSize="18" HorizontalOptions="Center" Text="{Binding ValueEvaluation}"></Label>                                
                            </StackLayout>
                        </ViewCell>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>